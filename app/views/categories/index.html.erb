<div class="container well formborderCategory">
  <div class="row">
  <div class="form_title">
    <h1>Categorías</h1>
  </div>
    <div class="col-md-9 center-block no-float">

<%unless @categories.empty?%>
<table>
  <thead>
    <tr>
      <th>NOMBRE</th>
      <th colspan="3"></th>
    </tr>
  </thead>
<%end%>

  <tbody>
    <% @categories.each do |category| %>
      <tr>
        <td><h3><%= category.name %></h3></td>
        <td><%= link_to 'EDITAR', edit_category_path(category),class:"btn btn-warning" %></td>
        <td><%= link_to 'ELIMINAR', category, method: :delete, data: { confirm: '¿Estas seguro?' },class:"btn btn-danger" %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'Nueva Categoría', new_category_path, class:"btn btn-success" %>
    </div>
  </div>
</div>

