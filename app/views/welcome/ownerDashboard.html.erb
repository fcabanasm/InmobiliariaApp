<div class="container">
    <div class="row">
        <%current_user.apartments.ultimos.each do |z|%>
        <%=link_to z do%>
            <div class="col-xs-4">
            <div class="box relative apartment-height">
            <%unless z.pictures.empty?%>
            <div class="absolute apartment-height background-cover rounded" style="background:url(<%=z.pictures.first.image.url%>);top:0px;left:0px;width:100%;">
            </div>
            <%end%>
            <div class="absolute apartment-height background-cover rounded"
             style="background:rgba(0,0,0,0.3);top:0px;left:0px;width:100%;">
            </div>
                <div class="relative white text-center">
                <h4> <%=z.title %> </h4>
                </div>
            </div>
            <div class="top-space text-center margin-sup">
                <%if z.may_ownerUnRent?%>
                    <%= link_to "Fin Arriendo", "/apartments/#{z.id}/ownerUnRent", class:"btn btn-warning", method: :put%>
                <%else%>
                    <%if z.state=="published_unrented"%>
                        <h4 style="color:green">Publicado</h4>
                    <%end%>
                    <%if z.state=="unpublished_unrented"%>
                        <h4 style="color:red">No Publicado</h4>
                    <%end%>
                <%end%>
            </div>
            </div>
        <%end%>
        <%end%>
    </div>
</div>