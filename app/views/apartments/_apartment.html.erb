<%= link_to apartment, 'data-no-turbolink' => true do %>
    <div class="col-md-4 top-space">
      <div class="box relative apartment-height">
      <%unless apartment.pictures.empty?%>
        <div class="absolute apartment-height background-cover" style="background:url(<%=
                    apartment.pictures.first.image.url%>);top:0px;left:0px;width:100%;">

        </div>
        <%end%>
        <div class="absolute apartment-height background-cover"
             style="background:rgba(0,0,0,0.3);top:0px;left:0px;width:100%;">
        </div>
        <div class="relative white text-center">
          <h2> <%= apartment.title %> </h2>
        </div>
      </div>
    </div>
<% end %>