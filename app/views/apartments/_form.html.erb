<%= form_for(@apartment, :html => {:multipart => true}) do |f| %>
  <% if @apartment.errors.any? %>
    <div id="error_explanation">
      <h2><%= pluralize(@apartment.errors.count, "error") %> prohibited this apartment from being saved:</h2>

      <ul>
      <% @apartment.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
      </ul>
    </div>
  <% end %>

  <div class="form-group">
    <%= f.label :title,'Titulo' %><br>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :description, 'Descripción' %><br>
    <%= f.text_area :description %>
  </div>
  <div class="form-group">
    <%= f.label :address, 'Dirección' %><br>
    <%= f.text_field :address %>
  </div>

  <div class="form-group">
    <%= f.label :category_id, 'Categoría' %><br>
    <%= f.collection_select :category_id, Category.all, :id, :name %>
  </div>

  <div class="form-group">
    <%= f.label :rooms, 'Piezas' %><br>
    <%= f.number_field :rooms, min:"1" %>
  </div>
  <div class="form-group">
    <%= f.label :bathrooms, "Baños" %><br>
    <%= f.number_field :bathrooms, min:"1" %>
  </div>
  <div class="form-group">
    <%= f.label :pernightPrice,"Precio/Día (USD)" %><br>
    <%= f.number_field :pernightPrice, min:"10", max:"1000", placeholder:"Valor por dia de arriendo en USD"%>
  </div>
  <div class="form-group">
    <%= f.label :reservePrice,"Precio Reserva (USD)" %><br>
    <%= f.number_field :reservePrice, min:"10", max:"1000", placeholder:"Precio para reservar vivienda en USD"%>
  </div>

 <div class="form-group">
      <h4 class="form_title">Características Adicionales</h4>
       <div>
         <%= f.check_box :wifi %>
          <%= f.label :wifi %>
       </div>       
        <div>
          <%= f.check_box :tv %>
          <%= f.label :tv %>
        </div>
           <div>
         <%= f.check_box :radio %>
          <%= f.label :radio %>
       </div>       
        <div>
          <%= f.check_box :tvcable %>
          <%= f.label :tvcable,'Tv Satelital' %>
        </div>  
        <div>
          <%= f.check_box :parking %>
          <%= f.label :parking,'Estacionamiento' %>
        </div>
        
  </div>


  <div class="form-group">
    <%= f.label :pictures, :class => 'control-label' %>
    <div class="controls img_place">
    <%= file_field_tag "images[]", type: :file %>
    <label for="add_img">Añadir más imagenes</label>
    <span><i id="add_img" style="cursor:pointer" class="fa fa-plus fa-2x"></i> 
    </span>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit "Publicar", :class => 'btn btn-info' %>
  </div>
<% end %>

